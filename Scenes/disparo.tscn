void fragment() {
    vec4 tex_color = texture(TEXTURE, UV);
    
    // Color verde aproximado a eliminar
    vec3 target_color = vec3(0.0, 1.0, 0.0); // RGB(0, 255, 0)
    float threshold = 0.3; // Ajusta la tolerancia

    float diff = distance(tex_color.rgb, target_color);
    if (diff < threshold) {
        tex_color.a = 0.0; // Hace transparente el color verde
    }

    COLOR = tex_color;
}


